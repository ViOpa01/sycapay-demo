<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/transactionTypeText"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:text="Card Payment"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/transaction_action"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/transactionTypeText"
        android:gravity="center_horizontal|center_vertical"
        android:text="Please Insert your Card"
        android:textSize="20dp"
        android:layout_marginTop="24dp"/>


    <TextView
        android:id="@+id/transactionAmountText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/transaction_action"
        android:gravity="center_horizontal|center_vertical"
        tools:text="N454.00"
        android:textSize="20dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/transactionImage"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/insert_card"
        android:tint="@android:color/darker_gray"/>

</RelativeLayout>